{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["overlays#build"]
    },
    "bundle:linux": {
      "dependsOn": ["build"]
    },
    "bundle:mac": {
      "dependsOn": ["build"]
    },
    "bundle:unpack": {
      "dependsOn": ["build"]
    },
    "bundle:win": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "fmt": {
      "dependsOn": ["lint", "prettier"]
    }
  }
}
