  "main": "./out/main/index.js",
  "scripts": {
    "build": "pnpm run type-check && pnpm run build-only",
    "build-only": "electron-vite build",
    "bundle:linux": "electron-builder --linux",
    "bundle:mac": "electron-builder --mac",
    "bundle:unpack": "electron-builder --dir",
    "bundle:win": "gsudo pnpm exec electron-builder --win",
    "dev": "electron-vite dev",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "prettier": "prettier --write .",
    "start": "electron-vite preview",
    "type-check": "pnpm run type-check:node && pnpm run type-check:web",
    "type-check:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "type-check:web": "tsc --noEmit -p tsconfig.web.json --composite false"
  },
